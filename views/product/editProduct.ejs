<!-- breadcrumbs ends-->
<!-- register -->
	<div class="register">
		<div class="container">
			<h3 class="animated wow zoomIn" data-wow-delay=".5s">Update Info</h3>
			<p class="est animated wow zoomIn" data-wow-delay=".5s">Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia 
				deserunt mollit anim id est laborum.</p>
			<div class="login-form-grids">
				<h5 class="animated wow slideInUp" data-wow-delay=".5s">Product information</h5>
				<form class="animated wow slideInUp" data-wow-delay=".5s" method='post' action='/products/<%- product._id%>?_method=PUT' enctype="multipart/form-data">
					<input type="text" placeholder="Category..." name='product[category]' title='only contain alphabet,whitespace and -' value="<%- product.category%>" class='update' required >
					<input type="text" placeholder="Company.." name='product[company]' title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" value="<%- product.company%>" class='update' required>
					<input type="text" placeholder="Model..."  title='only contain alphabet,whitespace and -' name='product[model]' value="<%- product.model%>" class='update' required >
					<input type="text" placeholder="Name of Product..." name='product[name]' value="<%- product.name%>" class='update'  required >
					<input type="number" placeholder='Max Retail Price of Product...' name='product[printed_price]' value="<%- product.printed_price%>" class='update'  required >
					<input type="number" placeholder="Discounted price of Product..." name='product[discounted_price]' value="<%- product.discounted_price%>" class='update'  required >
					<input type="text" placeholder="Description of Product..." name='product[description]' value="<%- product.description%>" class='update'  required >
					<!--<input type="text" placeholder="Company Verified Product[Y or N]..." name='product[verified]' value="<%- product.verified%>" class='update'  required >-->
					<!--<input type="number" placeholder="quantity" name='product[quantity]' value="<%- product.quantity%>" class='update' required >-->
					<input type="number" placeholder="pin code" name='product[pinCode]'  value="<%- product.pinCode%>" class='update' required >
					<!--<input type="number" placeholder="delivery time in days" name='product[deliveryTime]' value="<%- product.deliveryTime%>" class='update'  required >-->
					<input type="text" placeholder="seller Name..." name='product[sellerName]' title='only contain alphabet,whitespace and -' value="<%- product.sellerName%>" class='update'  required >
					<input type='file' name='product[image]' value="<%- product.image%>" class='update' title='please only upload the new image if you want to change the previosly added image'>
					<input type="submit" value="Update Info" id='submit' >
				</form>
			</div>
			<div class="register-home animated wow slideInUp" data-wow-delay=".5s">
				<a href="/">Home</a>
			</div>
		</div>
	</div>
<!-- //register -->
<% include ../partials/footer %>