<% include ../partials/header %>
	<!--load ckeditor-->
	<!--<script src="https://cdn.ckeditor.com/4.11.3/basic/ckeditor.js"></script>-->
	<script>
		// CKEDITOR.replace('description');
	</script>
	<!-- breadcrumbs start -->
	<nav aria-label="breadcrumb">
		<div class="container">
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a href="/">Home</a></li>
				<li class="breadcrumb-item"><a href="/products">Products</a></li>
				<li class="breadcrumb-item active" aria-current="page">Add Product</li>
			</ol>
		</div>
	</nav>
	<!-- breadcrumbs ends-->

	<!--update product-->
	<section class="">
		<h1 class="animated wow zoomIn text-center py-3" data-wow-delay=".5s">Update
			<%= product.name %>
		</h1>
		<div class="container">
			<p class="est animated wow zoomIn text-center" data-wow-delay=".5s">Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.</p>
			<div class="row pt-4 pb-3">
				<div class="col-md-8 mx-auto">
					<!--<h2 class="animated wow slideInUp text-center pt-2 pb-4" data-wow-delay=".5s">Product information</h2>-->
					<form class="animated wow slideInUp" data-wow-delay=".5s" method='post' action='/products/<%- product._id%>?_method=PUT' enctype="multipart/form-data">
						<div class="form-group">
							<label for="company">Product Company: </label>
							<input type="text" id='company' value="<%- product.company%>" name='product[company]' class='form-control' required placeholder="Company of product">
						</div>
						<div class="form-group">
							<label for="model">Model:</label>
							<input type="text" id='model' value="<%- product.model%>" class='form-control' name='product[model]' required placeholder="Model">
						</div>
						<div class="form-group">
							<label for="name">Name:</label>
							<input type="text" id='name' name='product[name]' value="<%- product.name%>" class='form-control' required placeholder="Name of Product">
						</div>
						<div class="form-group">
							<label for="mrp">Max retail Price:</label>
							<input type="number" id='mrp' name='product[printed_price]' value="<%- product.printed_price%>" class='form-control' required placeholder='Max Retail Price of Product'>
						</div>
						<div class="form-group">
							<label for="discount">Discounted Price:</label>
							<input type="number" id='discount' name='product[discounted_price]' value="<%- product.discounted_price%>" class='form-control' required placeholder="Discounted price of Product">
						</div>
						<div class="form-group">
							<label for="seller">Name of Seller</label>
							<input type="text" id='seller' name='product[sellerName]' value="<%- product.sellerName%>" class='form-control' required placeholder="seller Name">
						</div>
						<div class="form-group">
							<label for="sellerPin">Pin Code:</label>
							<input type="number" id='sellerPin' name='product[pinCode]' value="<%- product.pinCode%>" class='form-control' required placeholder="pin code of seller">
						</div>
						<div class="form-group">
							<label for="category">Category: </label>
							<select multiple class="form-control" value="<%- product.category%>" id="category">
						      <option>1</option>
						      <option>2</option>
						      <option>3</option>
						      <option>4</option>
						      <option>5</option>
						    </select>
						</div>
						<div class="form-group">
							<label for="image">Product Image:</label>
							<input type='file' name='product[image]' value="<%- product.image%>" id='image' class='form-control-file' accept='image/*'>
						</div>

						<div class="form-group">
							<label for="description">Description: </label>
							<textarea name="product[description]" value="" id='description' cols="30" rows="10" class='form-control' placeholder='Description of product'>
								<%- product.description%>		
							</textarea>
						</div>
						<div class="text-center">
							<button type="submit" class="btn btn-primary">Submit</button>
						</div>
					</form>
				</div>

			</div>
			<div class="py-4 animated text-center wow slideInUp" data-wow-delay=".5s">
				<a href="/products/<%= product._id %>" class='px-4 py-2 bg-warning'>back</a>
			</div>

		</div>
	</section>
	<% include ../partials/footer %>
