<% include ./partials/header %>
	<!-- banner -->
	<!--corousel start-->
	<header>
		<div id="carouselIndicators" class="carousel slide" data-ride="carousel">
			<ol class="carousel-indicators">
				<li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
				<li data-target="#carouselIndicators" data-slide-to="1"></li>
				<li data-target="#carouselIndicators" data-slide-to="2"></li>
				<li data-target="#carouselIndicators" data-slide-to="3"></li>
			</ol>
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img class="d-block w-100" src="/images/banner.jpg" alt="First slide">
				</div>
				<div class="carousel-item">
					<img class="d-block w-100" src="/images/1.jpg" alt="Second slide">
				</div>
				<div class="carousel-item">
					<img class="d-block w-100" src="/images/2.jpg" alt="Third slide">
				</div>
				<div class="carousel-item">
					<img class="d-block w-100" src="/images/3.jpg" alt="Third slide">
				</div>

			</div>
			<a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
		    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
		    <span class="sr-only">Previous</span>
		  </a>
			<a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
		    <span class="carousel-control-next-icon" aria-hidden="true"></span>
		    <span class="sr-only">Next</span>
		  </a>
		</div>
	</header>
	<!-- corousel ends -->
	<!-- banner bottom start -->

	<!-- banner-bottom  ends-->
	<!-- collections -->
	<section class="new-collections py-5">
		<h2 class="animated wow zoomIn text-center py-2" data-wow-delay=".5s">New Collections</h2>
		<div class="container">
			<p class="est animated wow zoomIn text-center" data-wow-delay=".5s">Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.</p>
			<div class="row d-flex flex-wrap pt-4">
				<% products.forEach((product) => { %>
					<div class="col-md-3 col-sm-4 px-0 m-1">
						<div class="card w-100">
							<img class="card-img-top img-responsive" src="<%= product.image %>" alt="<%= product.name %> image">
							<div class="card-body text-center">
								<h2 class="card-title">
									<%= product.name %>
								</h2>
								<!--<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>-->
								<a href="/products/<%= product._id %>" class="btn btn-success px-3 py-2"> view item</a>
							</div>
						</div>
					</div>
					<% }) %>
			</div>
			<div class='p-4 text-center animated wow zoomIn'>
				<a href="/products" class='btn btn-success '> View More Items</a>
			</div>
		</div>
	</section>
	<!-- collections ends-->

	<!-- collections-bottom start -->
	<section class="pt-5">
		<div class="container">
			<div class="collections-promo">
				<div class="collections-promo-text animated wow slideInLeft" data-wow-delay=".5s">
					<h3>45% Off For <span>Women & Children's</span></h3>
				</div>
			</div>
		</div>
	</section>
	<!-- collections-bottom ends-->

	<!--newslatter-->
	<section class='mt-2'>
		<div class="container">
			<div class="newsletter animated wow slideInUp py-2" data-wow-delay=".5s">
				<h2 class='p-2'>Newsletter</h2>
				<p>Join us now to get all news and special offers.</p>
				<form action='/newsletter' method='post'>
					<span class="fas fa-envelope px-2" aria-hidden="true"></span>
					<input type="email" name='newsletter[email]' required="">
					<input type="submit" class='mt-2' value="Join Us">
				</form>
			</div>
		</div>
	</section>
	<% include ./partials/footer %>
