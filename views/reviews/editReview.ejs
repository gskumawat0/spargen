<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Edit Review</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/products/<%= product_id %>/reviews/<%=review._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=review.text %>" name="review[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href=`/products/${product_id}`>Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>